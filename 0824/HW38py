text = input("請輸入一串文字:")
shift = int(input("請輸入位移數(正數向右, 負數向左):"))

def caesar_cipher(text, shift):
    result = ""
    for ch in text:
        if ch.isupper():  
            result += chr((ord(ch) - ord('A') + shift) % 26 + ord('A'))
        elif ch.islower():  
            result += chr((ord(ch) - ord('a') + shift) % 26 + ord('a'))
        else:
            result += ch  
    return result

print(caesar_cipher(text, shift))   
